<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/galleryFragment">

    <fragment
        android:id="@+id/galleryFragment"
        android:name="com.example.galleryofunsplash.ui.main.GalleryFragment"
        android:label="fragment_gallery"
        tools:layout="@layout/fragment_gallery" >
        <action
            android:id="@+id/action_galleryFragment_to_detailsGalleryFragment"
            app:destination="@id/detailsGalleryFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsGalleryFragment"
        android:name="com.example.galleryofunsplash.ui.main.DetailsGalleryFragment"
        android:label="fragment_details_gallery"
        tools:layout="@layout/fragment_details_gallery" />
</navigation>